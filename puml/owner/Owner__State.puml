@startuml

title Owner State Diagram

'https://plantuml.com/state-diagram

left to right direction
'top to bottom direction

scale 1000 width

[*] --> OWNER_LIST

OWNER_LIST --> OWNER_NEW : button_addNew_dialog()
OWNER_NEW --> OWNER_LIST: cancel_and_back()
OWNER_NEW --> OWNER_DETAILS: button_addNew_perform() OK

OWNER_LIST --> OWNER_DETAILS: button_details_owner()
OWNER_DETAILS --> OWNER_LIST: button_back_to_list()

OWNER_DETAILS --> OWNER_EDIT: button_edit_dialog()
OWNER_EDIT --> OWNER_DETAILS: button_cancel_and_back()
OWNER_EDIT --> OWNER_DETAILS: button_update_perform() OK

OWNER_DETAILS --> OWNER_DELETE: button_delete_owner()
OWNER_DELETE --> OWNER_DETAILS: button_cancel_and_back()
OWNER_DELETE --> OWNER_DETAILS: button_delete_perform() OK

state OWNER_DETAILS {

    [*] --> OWNER_PET_NEW: button_addNew_pet_dialog()
    [*] --> OWNER_PET_EDIT: button_edit_pet_dialog()
    [*] --> OWNER_PET_DELETE: button_delete_pet_dialog()

    [*] --> OWNER_PET_VISIT_NEW: button_addNew_visit_dialog()
    [*] --> OWNER_PET_VISIT_EDIT: button_edit_visit_dialog()
    [*] --> OWNER_PET_VISIT_DELETE: button_delete_visit_dialog()

    OWNER_PET_NEW --> [*] : db_pet_addNew() OK
    OWNER_PET_EDIT --> [*] : db_pet_update() OK
    OWNER_PET_DELETE --> [*]: db_pet_delete() OK

    OWNER_PET_VISIT_NEW --> [*] : db_pet_visit_addNew() OK
    OWNER_PET_VISIT_EDIT --> [*] : db_pet_visit_update() OK
    OWNER_PET_VISIT_DELETE --> [*]: db_pet_visit_delete() OK

    state OWNER_PET_NEW {
        OWNER_PET_NEW --> OWNER_PET_NEW : db_pet_addNew() not OK, invalid
    }
    state OWNER_PET_EDIT {
        OWNER_PET_EDIT --> OWNER_PET_EDIT : db_pet_update() not OK, invalid
    }
    state OWNER_PET_DELETE {
        OWNER_PET_DELETE --> OWNER_PET_DELETE: db_pet_delete() not OK, invalid
    }

    state OWNER_PET_VISIT_NEW {
        OWNER_PET_VISIT_NEW --> OWNER_PET_VISIT_NEW : db_visit_addNew() not OK, invalid
    }
    state OWNER_PET_VISIT_EDIT {
        OWNER_PET_VISIT_EDIT --> OWNER_PET_VISIT_EDIT : db_visit_update() not OK, invalid
    }
    state OWNER_PET_VISIT_DELETE {
        OWNER_PET_VISIT_DELETE --> OWNER_PET_VISIT_DELETE: db_visit_delete() not OK, invalid
    }
}

state OWNER_EDIT {
    OWNER_EDIT --> OWNER_EDIT: button_addNew_perform() not OK, invalid
}
state OWNER_DELETE {
    OWNER_DELETE --> OWNER_DELETE: owner_udelete() not OK, invalid
}
state OWNER_NEW {
    OWNER_NEW --> OWNER_NEW : owner_addNew() not OK, invalid
}

OWNER_LIST --> [*]

@enduml